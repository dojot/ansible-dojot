apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: backstage
    app: dojot
  name: backstage
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: backstage
  template:
    metadata:
      labels:
        name: backstage
        app: dojot
    spec:
      containers:
      - image: dojot/backstage:{{ dojot_version }}
        name: backstage
        env:
        - name: LOCAL_URL
          value: {{ kong_url }}
      restartPolicy: Always
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/group
                operator: In
                values:
                - "{{ dojot_node_label.dojot }}"
{% endif %}
