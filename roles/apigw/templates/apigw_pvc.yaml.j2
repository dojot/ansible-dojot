apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: kong
  namespace: {{ dojot_namespace }}
  labels:
    app: dojot
    name: kong
spec:
  selector:
    matchLabels:
      app: dojot
      name: kong
  accessModes:
    - ReadOnlyMany
  storageClassName: {{ dojot_storage_class_name }}
  resources:
    requests:
      storage: {{ dojot_apigw_volume_size }}
