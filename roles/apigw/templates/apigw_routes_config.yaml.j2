apiVersion: batch/v1
kind: Job
metadata:
  name: kong-route-config
  namespace: {{ dojot_namespace }}
spec:
  template:
    metadata:
      name: kong-route-config
    spec:
      restartPolicy: OnFailure
      containers:
      - name: kong-route-config
        image: dojot/byrnedo-alpine-curl
        env:
        - name: DOJOT_DOMAIN_NAME
          value: "{{ dojot_domain_name }}"
        - name: DOJOT_KONG_ROUTE_ALLOW_ONLY_HTTPS
          value: "false"
        volumeMounts:
        - mountPath: /config_file
          name: kong-route-config
        command: ['/bin/sh', '/config_file/kong-config.sh']
      volumes:
      - name: kong-route-config
        configMap:
          name: kong-config
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/dojot
                operator: In
                values:
                - "enabled"
{% endif %}
