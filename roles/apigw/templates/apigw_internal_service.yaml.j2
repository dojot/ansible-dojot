apiVersion: v1
kind: Service
metadata:
  labels:
    name: kong
  name: kong
  namespace: {{ dojot_namespace }}
spec:
  type: ClusterIP
  ports:
  - name: "apigw-config"
    port: {{ dojot_internal_api_config_port }}
    targetPort: {{ dojot_internal_api_config_port }}
  - name: "apigw-http-internal"
    port: {{ dojot_internal_http_port }}
    targetPort: {{ dojot_internal_http_port }}
  selector:
    name: kong
    app: dojot