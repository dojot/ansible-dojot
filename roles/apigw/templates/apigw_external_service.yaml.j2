apiVersion: v1
kind: Service
metadata:
  labels:
    name: kong-external
  name: kong-external
  namespace: {{ dojot_namespace }}
spec:
  type: NodePort
  ports:
  - name: "apigw-http"
    port: {{ dojot_internal_http_port }}
    targetPort: {{ dojot_internal_http_port }}
{% if dojot_fixed_nodeports_enabled %}
    nodePort: {{ dojot_nodeports.apigw }}
{% endif %}
  selector:
    name: kong
    app: dojot
