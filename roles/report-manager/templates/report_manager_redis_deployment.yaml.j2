apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: report-manager-redis
    app: dojot
  name: report-manager-redis
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: report-manager-redis
  template:
    metadata:
      labels:
        name: report-manager-redis
        app: dojot
    spec:
      containers:
      - image: dojot/redis:6.0.4-alpine3.11
        name: report-manager-redis
        readinessProbe:
          exec:
            command:
              - redis-cli
              - ping
          failureThreshold: 30
          periodSeconds: 1
          timeoutSeconds: 3
        livenessProbe:
          exec:
            command:
              - redis-cli
              - ping
          failureThreshold: 30
          periodSeconds: 1
          timeoutSeconds: 3
      restartPolicy: Always
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/dojot
                operator: In
                values:
                - "enabled"
{% endif %}