upstream basic_auth_backend {
    zone basic_auth_backend 256k;
    least_conn;
{% for node in groups['http_agent_nodes'] | default([]) %}
    server {{ node }}:{{ dojot_nodeports.basic_auth }};
{% endfor %}
}

server {
    listen 3000;
    proxy_pass basic_auth_backend;
    proxy_timeout 10m;
    proxy_connect_timeout 5s;
    proxy_buffer_size 16k;
    ssl_session_cache shared:SSL:1m;
}