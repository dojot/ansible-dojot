apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: keycloak-init
  namespace: {{ dojot_namespace }}
  labels:
    app: dojot
    name: keycloak-init
spec:
{% if dojot_storage_class_name == "local-storage" %}
  selector:
    matchLabels:
      app: dojot
      name: keycloak-init
{% endif %}
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ dojot_storage_class_name }}
  resources:
    requests:
      storage: {{ dojot_keycloak_init_volume_size }}
