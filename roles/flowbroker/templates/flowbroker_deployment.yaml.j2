apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: flowbroker
    app: dojot
  name: flowbroker
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: flowbroker
  template:
    metadata:
      labels:
        name: flowbroker
        app: dojot
    spec:
      serviceAccountName: flowbroker
      restartPolicy: Always
      containers:
      - image: dojot/flowbroker:{{ dojot_flowbroker_version }}
        name: flowbroker
        env:
        - name: DEPLOY_ENGINE
          value: kubernetes
        - name: DOJOT_MANAGEMENT_USER
          value: flowbroker
        - name: FLOWBROKER_NETWORK
        - name: KAFKA_GROUP_ID
          value: flowbroker-group
        - name: LOG_LEVEL
          value: info
        - name: KAFKA_HOSTS
          value: kafka-server:{{ dojot_kafka_port }}
        - name: FLOWBROKER_CACHE_HOST
          value: localhost
        - name: CONTEXT_MANAGER_ADDRESS
          value: localhost
        volumeMounts:
        - name: dojot-secrets-volume
          mountPath: "/secrets"
          readOnly: true

      - name: flowbroker-redis
        image: dojot/redis:6.0.4-alpine3.11
        readinessProbe:
          exec:
            command:
              - redis-cli
              - ping
          failureThreshold: 30
          periodSeconds: 1
          timeoutSeconds: 3
        livenessProbe:
          exec:
            command:
              - redis-cli
              - ping
          failureThreshold: 30
          periodSeconds: 1
          timeoutSeconds: 3

      - name: flowbroker-context-manager
        image: dojot/flowbroker-context-manager:{{ dojot_flowbroker_context_manager_version }}
        env:
        - name: SERVICE_PORT
          value: "8080"
        - name: ZOOKEEPER_HOST
          value: zookeeper-client
        - name: ZOOKEEPER_PORT
          value: "{{ dojot_zk_client_port }}"
        - name: ZEROMQ_PORT
          value: "5556"
        - name: HOLD_LOCK_TIMEOUT
          value: "10000"
        - name: WAIT_LOCK_TIMEOUT
          value: "30000"
      volumes:
      - name: dojot-secrets-volume
        secret:
          secretName: dojot-secrets
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/dojot
                operator: In
                values:
                - "enabled"
{% endif %}
