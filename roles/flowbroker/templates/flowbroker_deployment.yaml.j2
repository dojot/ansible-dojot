apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: flowbroker
    app: dojot
  name: flowbroker
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: flowbroker
  template:
    metadata:
      labels:
        name: flowbroker
        app: dojot
    spec:
      serviceAccountName: flowbroker
      restartPolicy: Always
      containers:
      - image: dojot/flowbroker:{{ dojot_flowbroker_version }}
        name: flowbroker
        env:
        - name: FLOWBROKER_CACHE_HOST
          value: localhost
        - name: KAFKA_HOSTS
          value: kafka-server:{{ dojot_kafka_port }}
        - name: CONTEXT_MANAGER_ADDRESS
          value: localhost
        - name: DEPLOY_ENGINE
          value: kubernetes
        - name: KAFKA_GROUP_ID
          value: flowbroker-group
        - name: DOJOT_MANAGEMENT_USER
          value: flowbroker
      - name: flowbroker-redis
        image: dojot/redis:5.0.5-alpine3.10
      - name: flowbroker-context-manager
        image: dojot/flowbroker-context-manager:{{ dojot_flowbroker_context_manager_version }}
        env:
        - name: SERVICE_PORT
          value: "8080"
        - name: ZOOKEEPER_HOST
          value: zookeeper-client
        - name: ZOOKEEPER_PORT
          value: "{{ dojot_zk_client_port }}"
        - name: ZEROMQ_PORT
          value: "5556"
        - name: HOLD_LOCK_TIMEOUT
          value: "10000"
        - name: WAIT_LOCK_TIMEOUT
          value: "30000"
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/group
                operator: In
                values:
                - "{{ dojot_node_label.dojot }}"
{% endif %}
