apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: image-manager
    app: dojot
  name: image-manager
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: image-manager
  template:
    metadata:
      labels:
        name: image-manager
        app: dojot
    spec:
      restartPolicy: Always
      containers:
      - image: dojot/image-manager:{{ dojot_image_manager_version }}
        name: image-manager
        env:
        - name: S3URL
          value: {{ s3_url }}
        - name: S3ACCESSKEY
          value: {{ s3_access_key }}
        - name: S3SECRETKEY
          value: {{ s3_secret_key }}
        - name: DBHOST
          value: postgres
        - name: DBUSER
          valueFrom:
            secretKeyRef:
              name: image-manager-secret
              key: user
        - name: DBPASS
          valueFrom:
            secretKeyRef:
              name: image-manager-secret
              key: password
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/group
                operator: In
                values:
                - "{{ dojot_node_label.dojot }}"
{% endif %}
