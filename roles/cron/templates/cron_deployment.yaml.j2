apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: cron
    app: dojot
  name: cron
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: cron
  template:
    metadata:
      labels:
        name: cron
        app: dojot
    spec:
      containers:
      - image: dojot/cron:{{ dojot_backend_version }}
        name: cron
        env:
        - name: KAFKA_HOSTS
          value: {{ kafka_host }}
        - name: CRON_PRODUCER_METADATA_BROKER_LIST
          value: "{{ kafka_host }}"
        - name: CRON_CONSUMER_METADATA_BROKER_LIST
          value: "{{ kafka_host }}"
        - name: CRON_APP_USER_CONFIG_FILE
          value: "default.conf"
      restartPolicy: Always
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/dojot
                operator: In
                values:
                - "enabled"
{% endif %}
