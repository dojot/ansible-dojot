apiVersion: apps/v1
kind: StatefulSet
metadata:
  labels:
    name: kafka-ws-redis
    app: dojot
  name: kafka-ws-redis
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: kafka-ws-redis
  template:
    metadata:
      labels:
        name: kafka-ws-redis
        app: dojot
    spec:
      restartPolicy: Always
      containers:
      - image: dojot/redis:6.0.4-alpine3.11
        name: kafka-ws-redis
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/group
                operator: In
                values:
                - "{{ dojot_node_label.dojot }}"
{% endif %}
