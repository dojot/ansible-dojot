apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: rabbitmq
    app: dojot
  name: rabbitmq
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: rabbitmq
  template:
    metadata:
      labels:
        name: rabbitmq
        app: dojot
    spec:
      restartPolicy: Always
      containers:
      - image: dojot/rabbitmq:{{ dojot_rabbitmq_version }}
        name: rabbitmq
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/group
                operator: In
                values:
                - "{{ dojot_node_label.dojot }}"
{% endif %}
