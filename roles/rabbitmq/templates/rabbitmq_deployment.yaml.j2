apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: rabbitmq
    app: dojot
  name: rabbitmq
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: rabbitmq
  template:
    metadata:
      labels:
        name: rabbitmq
        app: dojot
    spec:
      containers:
      - image: dojot/rabbitmq:{{ dojot_rabbitmq_version }}
        name: rabbitmq
      restartPolicy: Always
