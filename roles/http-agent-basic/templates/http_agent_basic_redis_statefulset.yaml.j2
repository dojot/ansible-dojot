apiVersion: apps/v1
kind: StatefulSet
metadata:
  labels:
    name: http-agent-redis-basic
    app: dojot
  name: http-agent-redis-basic
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: http-agent-redis-basic
  template:
    metadata:
      labels:
        name: http-agent-redis-basic
        app: dojot
    spec:
      restartPolicy: Always
      containers:
      - image: dojot/redis:6.0.4-alpine3.11
        name: http-agent-redis-basic
        readinessProbe:
          exec:
            command:
              - redis-cli
              - ping
          failureThreshold: 30
          periodSeconds: 1
          timeoutSeconds: 3
        livenessProbe:
          exec:
            command:
              - redis-cli
              - ping
          failureThreshold: 30
          periodSeconds: 1
          timeoutSeconds: 3
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/dojot
                operator: In
                values:
                - "enabled"
{% endif %}
