apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv-telemetria-grafana
  labels:
    app: telemetria-grafana
spec:
  capacity:
    storage: 8Gi
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: "{{ dojot_storage_class_name }}"
  local:
    path: {{ dojot_volume_directory }}/telemetria/telemetria-grafana
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: dojot.components/telemetria
          operator: In
          values:
          - "enabled"