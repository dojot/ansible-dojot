apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv-kong
  labels:
    type: local
    app: dojot
    name: kong
spec:
  capacity:
    storage: 5Mi
  accessModes:
    - ReadOnlyMany
  persistentVolumeReclaimPolicy: Retain
  storageClassName: {{ dojot_storage_class_name }}
  local:
    path: {{ dojot_volume_directory }}/kong
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: dojot.components/dojot
          operator: In
          values:
          - "enabled"
