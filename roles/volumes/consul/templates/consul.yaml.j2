apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv-consul-server
  labels:
    app: dojot
    db: consul
spec:
  capacity:
    storage: 10Gi
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: {{ dojot_storage_class_name }}
{% if dojot_storage_class_name == "local-storage" %}
  #local:
  hostPath:
    path: {{ dojot_volume_directory }}/consul
{% endif %}
{% if dojot_storage_class_name == "nfs" %}
  nfs:
    server: {{ hostvars.nfs_host.ansible_host }}
    path: {{ dojot_volume_directory }}/consul
{% endif %}
