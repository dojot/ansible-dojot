apiVersion: vernemq.com/v1alpha1
kind: VerneMQ
metadata:
  labels:
    vernemq: k8s
  name: k8s
  namespace: {{ dojot_namespace }}
spec:
  baseImage: dojot/vernemq-dojot
  env:
    - name: PLUGIN_DISC_LIFETIME_SESSION
      value: "1500000"
    - name: VERNEMQ_CONF
      value: ""
    - name: CERTIFICATE_ACL_URL
      value: "http://certificate-acl:3000/internal/api/v1/acl-entries/"
  config:
    configs:
    - name: allow_register_during_netsplit
      value: "on"
    - name: allow_publish_during_netsplit
      value: "on"
    - name: allow_subscribe_during_netsplit
      value: "on"
    - name: allow_unsubscribe_during_netsplit
      value: "on"
    listeners:
    - address: 0.0.0.0
      port: 1883
    - address: 0.0.0.0
      port: 1888
      websocket: true
    plugins: []
  sidecarBaseImage: dojot/cert-sidecar
  sidecarEnv:
    - name: CERT_SC_APP_SIDECAR_TO
      value: "vernemq-k8s"
    - name: CERT_SC_LOG_CONSOLE_LEVEL
      value: "info"
    - name: CERT_SC_CERTS_HOSTNAMES
      value: "[\"vernemq-k8s\", \"{{ dojot_domain_name }}\"]"
    - name: CERT_SC_CERTS_FILES_BASEPATH
      value: "/vernemq/cert"
    - name: CERT_SC_CERTS_FILES_CA
      value: "ca.crt"
    - name: CERT_SC_CERTS_FILES_CERT
      value: "iotagent-mqtt.crt"
    - name: CERT_SC_CERTS_FILES_KEY
      value: "iotagent-mqtt.key"
    - name: CERT_SC_CERTS_FILES_CRL
      value: "ca.crl"
    - name: CERT_SC_CERTS_FILES_CABUNDLE
      value: "cabundle.crt"
    - name: CERT_SC_CRON_CABUNDLE
      value: "true"
  serviceAccountName: vernemq-k8s
{% if dojot_enable_node_affinity %}
  nodeSelector:
    dojot.components/vernemq: "enabled"
{% endif %}
  size: {{ dojot_vernemq_replicas }}
  tag: {{ dojot_verne_version }}
