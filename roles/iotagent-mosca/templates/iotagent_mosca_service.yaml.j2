apiVersion: v1
kind: Service
metadata:
  labels:
    name: iotagent-mosca
  name: iotagent-mosca
  namespace: {{ dojot_namespace }}
spec:
  externalTrafficPolicy: Local
  type: NodePort
  ports:
    - name: mqtt
      port: 1883
{% if dojot_fixed_nodeports_enabled %}
      nodePort: {{ dojot_nodeports.mqtt }}
{% endif %}
    - name: mqtts
      port: 8883
{% if dojot_fixed_nodeports_enabled %}
      nodePort: {{ dojot_nodeports.mqtts }}
{% endif %}
  selector:
    name: iotagent-mosca
    app: dojot
