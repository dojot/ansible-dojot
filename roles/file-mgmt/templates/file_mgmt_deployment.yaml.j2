apiVersion: apps/v1
kind: Deployment
metadata:
  name: file-mgmt
  labels:
    name: file-mgmt
    app: dojot
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dojot
      name: file-mgmt
  template:
    metadata:
      labels:
        name: file-mgmt
        app: dojot
    spec:
      containers:
      - name: file-mgmt
        image: dojot/file-mgmt:{{ dojot_file_mgmt_version }}
        env:
        - name: FILEMGMT_CONSUMER_METADATA_BROKER_LIST
          value: "kafka-server:{{ dojot_kafka_port }}"
        - name: FILEMGMT_BUCKET_SUFFIX
          value: cpqd.dojot.
        - name: FILEMGMT_MINIO_ACCESS_KEY
          valueFrom:
            secretKeyRef:
              name: minio-files-secrets
              key: MINIO_ACCESS_KEY
        - name: FILEMGMT_MINIO_SECRET_KEY
          valueFrom:
            secretKeyRef:
              name: minio-files-secrets
              key: MINIO_SECRET_KEY
        - name: FILEMGMT_KEYCLOAK_TENANTS_URL
          value: "http://keycloak-proxy:8081/api/v1/tenant"
        - name: FILEMGMT_KEYCLOAK_URL
          value: "http://keycloak:8080"
        - name: FILEMGMT_KEYCLOAK_CLIENT_ID
          value: "dojot-file-mgmt"
        - name: FILEMGMT_KEYCLOAK_CLIENT_SECRET_FILE
          value: "dojot-file-mgmt"
        - name: FILEMGMT_LOG_CONSOLE_LEVEL
          value: "info"
        volumeMounts:
        - name: dojot-secrets-volume
          mountPath: "/secrets"
          readOnly: true
        ports:
        - containerPort: 7000
        livenessProbe:
          httpGet:
            path: /health
            port: 9000
          initialDelaySeconds: 30
          periodSeconds: 30
          failureThreshold: 3
          timeoutSeconds: 20
      volumes:
      - name: dojot-secrets-volume
        secret:
          secretName: dojot-secrets
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/dojot
                operator: In
                values:
                - "enabled"
{% endif %}