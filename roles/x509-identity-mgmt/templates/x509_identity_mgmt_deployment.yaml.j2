apiVersion: apps/v1
kind: Deployment
metadata:
  name: x509-identity-mgmt
  namespace: {{ dojot_namespace }}
spec:
  selector:
    matchLabels:
      app: dojot
      name: x509-identity-mgmt
  replicas: {{ dojot_x509_identity_mgmt_replicas }}
  template:
    metadata:
      labels:
        app: dojot
        name: x509-identity-mgmt
    spec:
      securityContext:
        fsGroup: 10001
      restartPolicy: Always
      containers:
      - name: x509-identity-mgmt
        image: dojot/x509-identity-mgmt:{{ dojot_x509_identity_mgmt_version  }}
        readinessProbe:
          httpGet:
            path: /health
            port: 9000
          periodSeconds: 20
          timeoutSeconds: 5
        env:
        - name: NODE_ENV
          value: "production"
        - name: X509IDMGMT_KAFKA_PRODUCER_METADATA_BROKER_LIST
          value: "kafka-server:{{ dojot_kafka_port }}"
        - name: X509IDMGMT_KAFKA_CONSUMER_METADATA_BROKER_LIST
          value: "kafka-server:{{ dojot_kafka_port }}"
        - name: X509IDMGMT_CERTIFICATE_BELONGSTO_APPLICATION
          value: "[\"vernemq-k8s\", \"v2k-bridge\", \"k2v-bridge\", \"http-agent\"]"
        - name: X509IDMGMT_KEYCLOAK_URL
          value: "http://keycloak:8080"
        - name: X509IDMGMT_DEVICEMGR_DEVICE_URL
          value: "http://device-manager-sidecar:5000/device"
        - name: X509IDMGMT_KEYCLOAK_TENANTS_URL
          value: "http://keycloak-proxy:8081/api/v1/tenant"
        volumeMounts:
        - name: x509-identity-mgmt
          mountPath: /opt/tls
        - name: dojot-secrets-volume
          mountPath: "/secrets"
          readOnly: true
      volumes:
      - name: x509-identity-mgmt
        persistentVolumeClaim:
          claimName: x509-identity-mgmt
      - name: dojot-secrets-volume
        secret:
          secretName: dojot-secrets
{% if dojot_enable_node_affinity %}
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: dojot.components/x509
                operator: In
                values:
                - "enabled"
{% endif %}
